{
  "$schema": "https://www.schemastore.org/tsconfig",
  "_version": "22.0.0",

  "compilerOptions": {
    "lib": ["es2024", "ESNext.Array", "ESNext.Collection", "ESNext.Iterator"],
    "module": "nodenext",
    "target": "es2022",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true, //está permitindo js, procurar como fazer a transição completa para ts depois
    "checkJs": false, // não checar arquivos js

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16"
  },
  "include": ["src/**/*","src/config/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/models"]
}